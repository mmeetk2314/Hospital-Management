    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patient.PatientName" class="control-label"></label>
                <input asp-for="Patient.PatientName" class="form-control" />
                <span asp-validation-for="Patient.PatientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.ContactNumber" class="control-label"></label>
                <input asp-for="Patient.ContactNumber" class="form-control" />
                <span asp-validation-for="Patient.ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.AdmitDate" class="control-label"></label>
                <input asp-for="Patient.AdmitDate" class="form-control" />
                <span asp-validation-for="Patient.AdmitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.DischargeDate" class="control-label"></label>
                <input asp-for="Patient.DischargeDate" class="form-control" />
                <span asp-validation-for="Patient.DischargeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.DoctorID" class="control-label"></label>
                <select asp-for="Patient.DoctorID" class ="form-control" asp-items="ViewBag.DoctorID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

