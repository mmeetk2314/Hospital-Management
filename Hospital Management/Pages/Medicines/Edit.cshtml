@page
@model Hospital_Management.Pages.Medicines.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Medicine.MedicineName" />
            <div class="form-group">
                <label asp-for="Medicine.Cost" class="control-label"></label>
                <input asp-for="Medicine.Cost" class="form-control" />
                <span asp-validation-for="Medicine.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.ExpiryDate" class="control-label"></label>
                <input asp-for="Medicine.ExpiryDate" class="form-control" />
                <span asp-validation-for="Medicine.ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.HospitalID" class="control-label"></label>
                <select asp-for="Medicine.HospitalID" class="form-control" asp-items="ViewBag.HospitalID"></select>
                <span asp-validation-for="Medicine.HospitalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
