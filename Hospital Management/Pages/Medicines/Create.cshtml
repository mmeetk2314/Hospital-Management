@page
@model Hospital_Management.Pages.Medicines.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Medicine.MedicineName" class="control-label"></label>
                <input asp-for="Medicine.MedicineName" class="form-control" />
                <span asp-validation-for="Medicine.MedicineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Cost" class="control-label"></label>
                <input asp-for="Medicine.Cost" class="form-control" />
                <span asp-validation-for="Medicine.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.ExpiryDate" class="control-label"></label>
                <input asp-for="Medicine.ExpiryDate" class="form-control" />
                <span asp-validation-for="Medicine.ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.HospitalID" class="control-label"></label>
                <select asp-for="Medicine.HospitalID" class ="form-control" asp-items="ViewBag.HospitalID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
